<?xml version="1.0" encoding="UTF-8"?>

<FSM>
    <STATE id="NOT_CONNECTED" type="ID">
        <!--
            load list of games
            - cmb list games
            - Load Game
            - Run
            - Pause
            - Reset
            - Unload
        -->
        <MESSAGE id="connect" nextState="CONNECTED"/>
    </STATE>
    <STATE id="CONNECTED">
        <!--
            load list of games
            add button is enabled (as long as now game is in list - maybe for later use with more games)
            gameids are created automatically
        -->
        <MESSAGE id="disconnect" nextState="NOT_CONNECTED"/>
    </STATE>
</FSM>



