<?xml version="1.0" encoding="UTF-8"?>
<FSM>
    <STATE id="GAME_SLOT_CHANGED" type="ID">
        <MESSAGE id="prolog" nextState="PROLOG"/>
        <MESSAGE id="pausing" nextState="PAUSING"/>
        <MESSAGE id="running" nextState="RUNNING"/>
        <MESSAGE id="epilog" nextState="EPILOG"/>
        <MESSAGE id="create_game" nextState="CREATE_GAME"/>
        <MESSAGE id="game_slot_changed" nextState="GAME_SLOT_CHANGED"/>
    </STATE>
    <STATE id="CREATE_GAME">
        <MESSAGE id="game_slot_changed" nextState="GAME_SLOT_CHANGED"/>
        <MESSAGE id="load_game" nextState="PROLOG"/>
    </STATE>
    <STATE id="PROLOG">
        <MESSAGE id="load_game" nextState="PROLOG"/>
        <MESSAGE id="game_slot_changed" nextState="GAME_SLOT_CHANGED"/>
        <MESSAGE id="run" nextState="RUNNING"/>
        <MESSAGE id="unload" nextState="CREATE_GAME"/>
    </STATE>
    <STATE id="PAUSING">
        <MESSAGE id="game_slot_changed" nextState="GAME_SLOT_CHANGED"/>
        <MESSAGE id="reset" nextState="PROLOG"/>
        <MESSAGE id="unload" nextState="CREATE_GAME"/>
        <MESSAGE id="run" nextState="RUNNING"/>
    </STATE>
    <STATE id="RUNNING">
        <MESSAGE id="game_slot_changed" nextState="GAME_SLOT_CHANGED"/>
        <MESSAGE id="pause" nextState="PAUSING"/>
        <MESSAGE id="epilog" nextState="EPILOG"/>
    </STATE>
    <STATE id="EPILOG">
        <MESSAGE id="game_slot_changed" nextState="GAME_SLOT_CHANGED"/>
        <MESSAGE id="reset" nextState="PROLOG"/>
        <MESSAGE id="unload" nextState="CREATE_GAME"/>
    </STATE>
</FSM>
