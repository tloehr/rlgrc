<?xml version="1.0" encoding="UTF-8"?>

<FSM>
    <STATE id="TRY_TO_CONNECT" type="ID">
        <!--
            load list of games
            - cmb list games
            - Load Game
            - Run
            - Pause
            - Reset
            - Unload
        -->
        <MESSAGE id="EXCEPTION" nextState="TRY_TO_CONNECT"/>
        <MESSAGE id="SUCCESS" nextState="CONNECTED"/>
    </STATE>
    <STATE id="CONNECTED">
        <!--
            load list of games
            Position 0 is always new game
        -->
        <MESSAGE id="DISCONNECT" nextState="TRY_TO_CONNECT"/>
    </STATE>
</FSM>

<FSM>
    <STATE id="NOTHING_" type="ID">
        <!--
            Load Server Status and print to log
        -->
        <MESSAGE id="" nextState="SHOW_GAME"/>
    </STATE>
    <STATE id="NOT_LOADED">

    </STATE>
    <STATE id="PROLOG">

    </STATE>
    <STATE id="PAUSING">

    </STATE>
    <STATE id="RUNNING">

    </STATE>
    <STATE id="EPILOG">

    </STATE>

</FSM>

